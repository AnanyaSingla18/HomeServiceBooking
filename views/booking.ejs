<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Book Service - Home Service Booking</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">HouseMate</a>
      <ul class="navbar-nav ms-auto">
        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
        <li class="nav-item"><a class="nav-link active" href="/services">Services</a></li>
        <li class="nav-item"><a class="nav-link" href="/bookings">Bookings</a></li>
      </ul>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="container my-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <div class="card shadow">
          <div class="card-header bg-primary text-white text-center">
            <h3>Book Your Service</h3>
            <% if (service) { %>
              <h5 class="mt-2"><%= service.name %> - ₹<%= service.price %></h5>
            <% } else { %>
              <p class="mt-2">Select a service to book.</p>
            <% } %>
          </div>
          <div class="card-body">
            <% if (error) { %>
              <div class="alert alert-danger"><%= error %></div>
            <% } %>
            <form action="/booking" method="POST" id="bookingForm">
              <!-- Hidden Service ID -->
              <input type="hidden" name="serviceId" value="<%= serviceId || '' %>">

              <!-- Customer Name -->
              <div class="mb-3">
                <label for="customerName" class="form-label">Your Name *</label>
                <input type="text" class="form-control" id="customerName" name="customerName" required 
                       value="<%= typeof customerName !== 'undefined' ? customerName : '' %>" 
                       placeholder="Enter your full name">
              </div>

              <!-- Booking Date -->
              <div class="mb-3">
                <label for="date" class="form-label">Preferred Date *</label>
                <input type="date" class="form-control" id="date" name="date" required 
                       value="<%= typeof date !== 'undefined' ? date : '' %>" 
                       min="<%= new Date().toISOString().split('T')[0] %>">
                <div class="form-text">Select a date from today onwards.</div>
              </div>

              <!-- Contact Method Radios -->
              <div class="mb-3">
                <label class="form-label fw-bold">How would we like to contact you? *</label>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="contactMethod" id="email" value="email" required 
                         <%= typeof contactMethod !== 'undefined' && contactMethod === 'email' ? 'checked' : '' %>>
                  <label class="form-check-label" for="email">
                    Email
                  </label>
                </div>
                <div class="form-check form-check-inline">
                  <input class="form-check-input" type="radio" name="contactMethod" id="phone" value="phone" required 
                         <%= typeof contactMethod !== 'undefined' && contactMethod === 'phone' ? 'checked' : '' %>>
                  <label class="form-check-label" for="phone">
                    Phone
                  </label>
                </div>
                <p class="form-text text-muted small mt-2">We will contact you through your preferred method to confirm details.</p>
              </div>

              <!-- Dynamic Contact Details -->
              <div id="contactDetails" class="mb-3" style="display: none;">
                <label id="contactLabel" class="form-label">Contact Details *</label>
                <div id="emailField" class="mb-2" style="display: none;">
                  <input type="email" class="form-control" id="emailInput" name="email" required 
                         placeholder="Enter your email address (e.g., user@example.com)"
                         value="<%= typeof email !== 'undefined' ? email : '' %>">
                  <div class="form-text">We'll send confirmation to this email.</div>
                  <div class="invalid-feedback">Please enter a valid email.</div>
                </div>
                <div id="phoneField" class="mb-2" style="display: none;">
                  <input type="tel" class="form-control" id="phoneInput" name="phone" required 
                         placeholder="Enter your phone number (e.g., 9876543210)"
                         value="<%= typeof phone !== 'undefined' ? phone : '' %>">
                  <div class="form-text">Enter 10-digit Indian number (starting with 6-9).</div>
                  <div class="invalid-feedback">Phone must be 10 digits starting with 6-9.</div>
                </div>
              </div>

              <!-- Preferred Time Slot -->
              <div class="mb-3">
                <label for="timeSlot" class="form-label">Preferred Time Slot *</label>
                <select class="form-select" id="timeSlot" name="timeSlot" required>
                  <option value="" <%= typeof timeSlot === 'undefined' ? 'selected' : '' %>>Choose a time slot</option>
                  <option value="morning" <%= typeof timeSlot !== 'undefined' && timeSlot === 'morning' ? 'selected' : '' %>>Morning (9 AM - 12 PM)</option>
                  <option value="afternoon" <%= typeof timeSlot !== 'undefined' && timeSlot === 'afternoon' ? 'selected' : '' %>>Afternoon (12 PM - 4 PM)</option>
                  <option value="evening" <%= typeof timeSlot !== 'undefined' && timeSlot === 'evening' ? 'selected' : '' %>>Evening (4 PM - 8 PM)</option>
                </select>
                <div class="form-text">Select your preferred time on the chosen date.</div>
              </div>

              <button type="submit" class="btn btn-primary w-100">Book Now</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="footer fixed-bottom">
    <div class="container">
      <p>© 2024 Home Service Booking. All rights reserved.</p>
    </div>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- NEW: Custom JS for Dynamic Fields -->
  <script>
    const contactMethodRadios = document.querySelectorAll('input[name="contactMethod"]');
    const contactDetails = document.getElementById('contactDetails');
    const emailField = document.getElementById('emailField');
    const phoneField = document.getElementById('phoneField');
    const emailInput = document.getElementById('emailInput');
    const phoneInput = document.getElementById('phoneInput');
    const contactLabel = document.getElementById('contactLabel');

    function toggleContactFields() {
      const selectedMethod = document.querySelector('input[name="contactMethod"]:checked')?.value;
      if (selectedMethod) {
        contactDetails.style.display = 'block';
        if (selectedMethod === 'email') {
          emailField.style.display = 'block';
          phoneField.style.display = 'none';
          emailInput.required = true;
          phoneInput.required = false;
          contactLabel.textContent = 'Email Address *';
          emailInput.classList.remove('is-invalid');
          phoneInput.classList.remove('is-invalid');
        } else if (selectedMethod === 'phone') {
          emailField.style.display = 'none';
          phoneField.style.display = 'block';
          phoneInput.required = true;
          emailInput.required = false;
          contactLabel.textContent = 'Phone Number *';
          phoneInput.classList.remove('is-invalid');
          emailInput.classList.remove('is-invalid');
        }
      } else {
        contactDetails.style.display = 'none';
      }
    }

    // Initial toggle on load (for error repopulation)
    contactMethodRadios.forEach(radio => radio.addEventListener('change', toggleContactFields));
    toggleContactFields();  // Run on load

    // Client-side phone validation
    phoneInput.addEventListener('input', function() {
      const value = this.value.replace(/\D/g, '');  // Only digits
      if (value.length > 10) {
        this.value = value.slice(0, 10);
      }
      if (value && !/^[6789]\d{9}$/.test(value)) {
        this.classList.add('is-invalid');
      } else {
        this.classList.remove('is-invalid');
      }
    });

    // Form submit validation
    document.getElementById('bookingForm').addEventListener('submit', function(e) {
      const selectedMethod = document.querySelector('input[name="contactMethod"]:checked')?.value;
      if (selectedMethod === 'email' && !emailInput.value.trim()) {
        e.preventDefault();
        emailInput.classList.add('is-invalid');
        alert('Please enter your email address.');
        return;
      }
      if (selectedMethod === 'phone' && !phoneInput.value.trim()) {
        e.preventDefault();
        phoneInput.classList.add('is-invalid');
        alert('Please enter your phone number.');
        return;
      }
    });
  </script>
</body>
</html>
