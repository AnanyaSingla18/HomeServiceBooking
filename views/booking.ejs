<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Book Service - Home Service Booking</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-light">
  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card shadow border-0 rounded-4">
          <div class="card-header bg-primary text-white text-center py-3">
            <h3>📅 Book Your Service</h3>
            <% if (service) { %>
              <p class="mb-0">Selected: <%= service.name %> - ₹<%= service.price %></p>
            <% } else { %>
              <p class="mb-0">Fill in details to book any service.</p>
            <% } %>
          </div>
          <div class="card-body p-4">
            <% if (error) { %>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
              </div>
            <% } %>

            <form method="POST" action="/booking" novalidate>
              <input type="hidden" name="serviceId" value="<%= serviceId || '' %>">
              
              <div class="mb-3">
                <label for="customerName" class="form-label">Full Name *</label>
                <input type="text" class="form-control <%= error ? 'is-invalid' : '' %>" id="customerName" name="customerName" value="<%= customerName %>" required minlength="2">
                <div class="invalid-feedback">Name must be at least 2 characters.</div>
              </div>

              <div class="mb-3">
                <label for="date" class="form-label">Preferred Date *</label>
                <input type="date" class="form-control <%= error ? 'is-invalid' : '' %>" id="date" name="date" value="<%= date %>" required min="<%= new Date().toISOString().split('T')[0] %>">
                <div class="invalid-feedback">Select a future date.</div>
              </div>

              <div class="mb-3">
                <label class="form-label fw-bold">Contact Preference *</label>
                <div class="row g-3">
                  <div class="col-md-6">
                    <div class="form-check">
                      <input class="form-check-input" type="radio" name="contactMethod" id="emailRadio" value="email" <%= contactMethod === 'email' ? 'checked' : '' %> required>
                      <label class="form-check-label d-block p-2 border rounded bg-light" for="emailRadio">
                        <strong>📧 Email ID</strong><br>
                        <small class="text-muted">Receive confirmation via email.</small>
                      </label>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-check">
                      <input class="form-check-input" type="radio" name="contactMethod" id="phoneRadio" value="phone" <%= contactMethod === 'phone' ? 'checked' : '' %>>
                      <label class="form-check-label d-block p-2 border rounded bg-light" for="phoneRadio">
                        <strong>📞 Phone Number</strong><br>
                        <small class="text-muted">Get a call or SMS.</small>
                      </label>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Email Field -->
              <div class="mb-3 email-field <%= contactMethod !== 'email' ? 'd-none' : '' %>">
                <label for="email" class="form-label">Email Address *</label>
                <input type="email" class="form-control <%= error ? 'is-invalid' : '' %>" id="email" name="email" value="<%= email %>" <%= contactMethod === 'email' ? 'required' : '' %>>
                <div class="invalid-feedback">Enter a valid email address.</div>
              </div>

              <!-- Phone Field -->
              <div class="mb-3 phone-field <%= contactMethod !== 'phone' ? 'd-none' : '' %>">
                <label for="phone" class="form-label">Phone Number *</label>
                <input type="tel" class="form-control <%= error ? 'is-invalid' : '' %>" id="phone" name="phone" value="<%= phone %>" <%= contactMethod === 'phone' ? 'required' : '' %> placeholder="+91 9876543210">
                <div class="invalid-feedback">Enter a valid Indian phone number (10 digits, starting 6-9).</div>
              </div>

              <div class="mb-3">
                <label for="timeSlot" class="form-label">Time Slot *</label>
                <select class="form-select <%= error ? 'is-invalid' : '' %>" id="timeSlot" name="timeSlot" required>
                  <option value="">Choose a time...</option>
                  <option value="morning" <%= timeSlot === 'morning' ? 'selected' : '' %>>Morning (9 AM - 12 PM)</option>
                  <option value="afternoon" <%= timeSlot === 'afternoon' ? 'selected' : '' %>>Afternoon (12 PM - 4 PM)</option>
                  <option value="evening" <%= timeSlot === 'evening' ? 'selected' : '' %>>Evening (4 PM - 8 PM)</option>
                </select>
                <div class="invalid-feedback">Please select a time slot.</div>
              </div>

              <button type="submit" class="btn btn-success w-100 py-2 fs-5">Confirm Booking ✅</button>
            </form>

            <div class="text-center mt-4">
              <a href="/services" class="btn btn-outline-secondary">Back to Services 🔧</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Toggle Script for Contact Fields -->
  <script>
    document.querySelectorAll('input[name="contactMethod"]').forEach(radio => {
      radio.addEventListener('change', function() {
        const emailField = document.querySelector('.email-field');
        const phoneField = document.querySelector('.phone-field');
        if (this.value === 'email') {
          emailField.classList.remove('d-none');
          phoneField.classList.add('d-none');
          document.getElementById('email').required = true;
          document.getElementById('phone').required = false;
        } else if (this.value === 'phone') {
          emailField.classList.add('d-none');
          phoneField.classList.remove('d-none');
          document.getElementById('phone').required = true;
          document.getElementById('email').required = false;
        }
      });
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
