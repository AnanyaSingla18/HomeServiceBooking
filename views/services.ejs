<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Our Services</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <!-- Navbar (Updated with Bookings Link) -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/">HouseMate</a>
      <ul class="navbar-nav ms-auto">
        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
        <li class="nav-item"><a class="nav-link active" href="/services">Services</a></li>
        <li class="nav-item"><a class="nav-link" href="/bookings">Bookings</a></li>
      </ul>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="container my-5">
    <div class="row">
      <div class="col-12">
        <h1 class="text-center mb-4">Our Services</h1>
        <% if (services.length === 0) { %>
          <div class="alert alert-info text-center">No services available yet. Check back soon!</div>
        <% } else { %>
          <div class="row">
            <% services.forEach(service => { %>
              <div class="col-md-4 mb-4">
                <div class="card service-card h-100">
                  <div class="card-body">
                    <h5 class="card-title"><%= service.name %></h5>
                    <p class="card-text"><%= service.description %></p>
                    <p class="card-text"><strong>Price: ₹<%= service.price %></strong></p>
                    <a href="/booking?serviceId=<%= service._id %>" class="btn btn-primary btn-book">Book Now</a>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } %>
      </div>
    </div>
    <div class="text-center">
      <a href="/" class="btn btn-secondary">Back to Home</a>
    </div>
  </main>

  <!-- Footer -->
  <footer class="footer fixed-bottom">
    <div class="container">
      <p>© Home Service Booking. All rights reserved. | Serving India with trusted home services.</p>
    </div>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
