<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Bookings - Home Service Booking</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-light">
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/">🏠 Home Services</a>
      <div class="navbar-nav ms-auto">
        <% if (user) { %>
          <span class="navbar-text me-3">Welcome, <%= user %>!</span>
          <a class="nav-link" href="/services">Services</a>
          <a class="nav-link active" href="/bookings">My Bookings</a>
          <a class="nav-link" href="/logout">Logout</a>
        <% } else { %>
          <a class="nav-link" href="/services">Services</a>
          <a class="nav-link" href="/login">Login</a>
          <a class="nav-link" href="/signup">Sign Up</a>
        <% } %>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <% if (user) { %>
      <div class="alert alert-info alert-dismissible fade show" role="alert">
        Hi <%= user %>! Here are your scheduled bookings.
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>

    <h2 class="text-center mb-4">My Bookings 📋</h2>
    
    <% if (bookings.length === 0) { %>
      <div class="alert alert-warning text-center">
        <h4>No bookings yet!</h4>
        <p>Book your first service <a href="/services">here</a>.</p>
      </div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-dark">
            <tr>
              <th>Service</th>
              <th>Customer</th>
              <th>Date</th>
              <th>Time Slot</th>
              <th>Contact</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% bookings.forEach(booking => { %>
              <tr>
                <td>
                  <% if (booking.service) { %>
                    <strong><%= booking.service.name %></strong><br>
                    <small class="text-muted">₹<%= booking.service.price %></small>
                  <% } else { %>
                    <span class="text-danger">Service N/A</span>
                  <% } %>
                </td>
                <td><%= booking.customerName %></td>
                <td><%= new Date(booking.date).toLocaleDateString() %></td>
                <td>
                  <span class="badge bg-info">
                    <%= booking.timeSlot.charAt(0).toUpperCase() + booking.timeSlot.slice(1) %>
                  </span>
                </td>
                <td>
                  <% if (booking.contactMethod === 'email') { %>
                    <span class="badge bg-primary">📧 <%= booking.email || 'N/A' %></span>
                  <% } else { %>
                    <span class="badge bg-success">📞 <%= booking.phone || 'N/A' %></span>
                  <% } %>
                </td>
                <td>
                  <span class="badge bg-success">Confirmed</span>
                  <br><small>Booked on <%= new Date(booking.createdAt).toLocaleDateString() %></small>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } %>

    <div class="text-center mt-4">
      <a href="/services" class="btn btn-primary">Book New Service</a>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-dark text-white text-center py-3 mt-5 fixed-bottom">
    <p>&copy; 2024 Home Service Booking. All rights reserved.</p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
