<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Bookings - Home Service Booking</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">HouseMate</a>
      <ul class="navbar-nav ms-auto">
        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
        <li class="nav-item"><a class="nav-link" href="/services">Services</a></li>
        <li class="nav-item"><a class="nav-link active" href="/bookings">Bookings</a></li>
      </ul>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="container my-5">
    <h2 class="text-center mb-4">Your Bookings</h2>
    <% if (bookings && bookings.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead class="table-dark">
            <tr>
              <th>Service</th>
              <th>Customer</th>
              <th>Date</th>
              <th>Contact Method</th>
              <!-- NEW: Contact Details Column -->
              <th>Contact Details</th>
              <!-- NEW: Time Slot Column -->
              <th>Time Slot</th>
              <th>Booked On</th>
            </tr>
          </thead>
          <tbody>
            <% bookings.forEach(booking => { %>
              <tr>
                <td>
                  <% if (booking.service && booking.service.name) { %>
                    <strong><%= booking.service.name %></strong><br>
                    <small class="text-muted">₹<%= booking.service.price %></small>
                  <% } else { %>
                    <span class="text-muted">Service unavailable</span>
                  <% } %>
                </td>
                <td><%= booking.customerName %></td>
                <td>
                  <i class="bi bi-calendar3 text-primary"></i> 
                  <%= new Date(booking.date).toLocaleDateString('en-IN') %>
                </td>
                <td>
                  <% if (booking.contactMethod === 'email') { %>
                    <span class="badge bg-info"><i class="bi bi-envelope"></i> Email</span>
                  <% } else if (booking.contactMethod === 'phone') { %>
                    <span class="badge bg-success"><i class="bi bi-telephone"></i> Phone</span>
                  <% } else { %>
                    <span class="text-muted">Not specified</span>
                  <% } %>
                </td>
                <!-- NEW: Contact Details -->
                <td>
                  <% if (booking.email) { %>
                    <span class="text-primary"><i class="bi bi-envelope"></i> <%= booking.email %></span>
                  <% } else if (booking.phone) { %>
                    <span class="text-success"><i class="bi bi-telephone"></i> <%= booking.phone %></span>
                  <% } else { %>
                    <span class="text-muted">N/A</span>
                  <% } %>
                </td>
                <!-- NEW: Time Slot -->
                <td>
                  <% if (booking.timeSlot) { %>
                    <span class="badge bg-warning text-dark">
                      <% if (booking.timeSlot === 'morning') { %>🌅 Morning<% } 
                         else if (booking.timeSlot === 'afternoon') { %>☀️ Afternoon<% } 
                         else if (booking.timeSlot === 'evening') { %>🌆 Evening<% } %>
                    </span>
                  <% } else { %>
                    <span class="text-muted">N/A</span>
                  <% } %>
                </td>
                <td>
                  <small class="text-muted">
                    <%= new Date(booking.createdAt).toLocaleDateString('en-IN') %>
                  </small>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <div class="text-center mt-3">
        <p class="text-muted">Total Bookings: <%= bookings.length %></p>
      </div>
    <% } else { %>
      <div class="text-center py-5">
        <i class="bi bi-calendar-x fs-1 text-muted mb-3"></i>
        <h4>No bookings yet.</h4>
        <p class="text-muted">Book your first service today!</p>
        <a href="/services" class="btn btn-primary">Browse Services</a>
      </div>
    <% } %>

    <!-- Back Buttons -->
    <div class="text-center mt-4">
      <div class="d-grid gap-2 d-md-block">
        <a href="/services" class="btn btn-primary me-md-2 mb-2">Back to Services</a>
        <a href="/" class="btn btn-outline-secondary">Back to Home</a>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="footer fixed-bottom">
    <div class="container">
      <p>© Home Service Booking. All rights reserved. | Serving India with trusted home services.</p>
    </div>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
